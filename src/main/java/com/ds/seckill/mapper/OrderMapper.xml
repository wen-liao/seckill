<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ds.seckill.mapper.OrderMapper">
    <insert id="insertOrder" parameterType="com.ds.seckill.model.Order">
        insert into order_ values(#{productId}, #{consumerId}, #{timestamp}, #{paid})
    </insert>
    <select id="getOrder" parameterType="com.ds.seckill.model.Order">
        select * from order_ where productId = #{productId}, consumerId = #{consumerId}, timestamp = #{timestamp}, paid = #{paid}
    </select>
</mapper>